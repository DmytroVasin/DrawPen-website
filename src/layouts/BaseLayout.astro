---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css"

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "DrawPen - simple screen annotation tool",
  description = "DrawPen is a free, open-source tool that lets you draw on top of any screen â€“ perfect for presentations, classes, live coding and remote meetings.",
} = Astro.props as Props;
---

<html lang='en'>
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://drawpen.app" />
    <meta property="og:image" content="/og-drawpen.png" />

    <link rel="icon" href="/favicon.svg" />
  </head>

  <body>
    <div>
      <Header />

      <main>
        <div class="mt-34 max-w-[90%] mx-auto">
          <slot />
        </div>
      </main>

      <Footer />
  </body>
</html>
