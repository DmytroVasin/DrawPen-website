---
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
  lang?: "en" | "uk"; // uk = Ukrainian
}

const {
  title = "DrawPen – simple screen annotation tool",
  description = "DrawPen is a free, open-source tool that lets you draw on top of any screen – perfect for presentations, classes, live coding and remote meetings.",
  lang = "en",
} = Astro.props as Props;

const isEn = lang === "en";
const basePath = isEn ? "/en" : "/ua";
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`https://drawpen.app${basePath}`} />
    <meta property="og:image" content="/og-drawpen.png" />

    <link rel="icon" href="/favicon.svg" />
  </head>

  <body>
    <div class="app-shell">
      <!-- Header -->
      <header class="app-header">
        <div class="app-header-inner">
          <div class="app-header-row">
            <a href={basePath} class="app-logo">
              <img src="/icon.png" alt="DrawPen logo" class="app-logo-mark" />

              <div>
                <div class="app-logo-text-main">DrawPen</div>
                <div class="app-logo-text-sub">
                  {isEn ? "Screen annotation tool" : "Інструмент для малювання на екрані"}
                </div>
              </div>
            </a>

            <nav class="app-nav">
              <a href="#faq">FAQ</a>
              <a
                href="https://github.com/DmytroVasin/DrawPen"
                target="_blank"
                rel="noreferrer"
              >
                GitHub
              </a>
            </nav>
          </div>
        </div>
      </header>

      <!-- Main -->
      <main class="app-main">
        <div class="app-main-inner">
          <slot />
        </div>
      </main>

      <!-- Footer -->
      <footer class="app-footer">
        <div class="app-footer-inner">
          <div>© {new Date().getFullYear()} DrawPen. MIT-licensed & open-source.</div>

          <div class="app-footer-links">
            <a
              href="https://github.com/DmytroVasin/DrawPen"
              target="_blank"
              rel="noreferrer"
            >
              GitHub
            </a>
            <a
              href="https://github.com/DmytroVasin/DrawPen/releases"
              target="_blank"
              rel="noreferrer"
            >
              Releases
            </a>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
